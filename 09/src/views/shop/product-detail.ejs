<%- include('../includes/head.ejs') %>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main class="centered">
    <h1><%= prod.title %></h1>
    <hr />
    <div>
      <img
        class="prod-detail-img"
        src="<%= prod.imageUrl %>"
        alt="<%= prod.title %>"
      />
    </div>
    <h2>$ <%= prod.price %></h2>
    <p><%= prod.description %></p>
    <form action="/cart" method="POST">
      <button class="btn" type="submit">Add to cart</button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>
</body>
